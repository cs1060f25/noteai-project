# Application Settings
APP_NAME="Lecture Highlight Extractor"
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_V1_PREFIX=/api/v1
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
MAX_UPLOAD_SIZE_MB=500

# Database (PostgreSQL for development/production)
# For local development with docker-compose:
# Note: Use 127.0.0.1 instead of localhost to force IPv4 and avoid conflicts with local PostgreSQL
DATABASE_URL=postgresql://lecture_user:lecture_password@127.0.0.1:5432/lecture_extractor
# For SQLite (not recommended):
# DATABASE_URL=sqlite:///./lecture_extractor.db
DB_ECHO=false

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1
CELERY_TASK_TIME_LIMIT=3600
CELERY_TASK_SOFT_TIME_LIMIT=3000

# AWS S3
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_REGION=us-east-1
S3_BUCKET_NAME=lecture-highlights
S3_PRESIGNED_URL_EXPIRY=3600
CLOUDFRONT_DOMAIN=

# AI Services
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash-lite
WHISPER_MODEL=whisper-1

# Security
SECRET_KEY=dev-secret-key-change-in-production

# Authentication - Clerk
# Get these from Clerk Dashboard: https://dashboard.clerk.com
# Free tier: 10,000 MAU/month with Google OAuth, GitHub OAuth, and Google OneTap
CLERK_PUBLISHABLE_KEY=pk_test_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
CLERK_SECRET_KEY=sk_test_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Rate Limiting
# Format: "X/minute" or "X/hour" or multiple limits separated by semicolon "X/minute;Y/hour"
RATE_LIMIT_PER_MINUTE=60

# Authentication endpoints
RATE_LIMIT_AUTH_LOGIN=5/minute
RATE_LIMIT_AUTH_REFRESH=10/minute

# Upload endpoint (resource-intensive)
RATE_LIMIT_UPLOAD=3/minute;10/hour

# Job polling endpoints
RATE_LIMIT_JOB_STATUS=20/minute
RATE_LIMIT_JOBS_LIST=30/minute

# Results and URL generation
RATE_LIMIT_RESULTS=10/minute
RATE_LIMIT_PRESIGNED_URL=15/minute

# API KEY SECRET
API_KEY_ENCRYPTION_SECRET=